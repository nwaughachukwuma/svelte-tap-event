{
  "name": "svelte-tap-event",
  "version": "0.0.8",
  "description": "Simple cross platform pointer/touch events support for Svelte",
  "repository": {
    "type": "git",
    "url": "nwaughachukwuma/svelte-pointer-events",
    "directory": "https://github.com/nwaughachukwuma"
  },
  "author": {
    "name": "Chukwuma Nwaugha",
    "email": "nwaughac@gmail.com"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "./dist/svelte-tap-event.umd.js",
  "module": "./dist/svelte-tap-event.es.js",
  "exports": {
    ".": {
      "import": "./dist/svelte-tap-event.es.js",
      "require": "./dist/svelte-tap-event.umd.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
		"svelte-touch",
    "svelte-tap",
    "svelte-hover",
		"iOS double tap",
    "iOS single tap support"
	],
  "sideEffects": false,
  "scripts": {
    "tsc": "tsc",
    "dev": "vite",
    "build": "vite build && tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "svelte": "^3.44.0",
    "svelte-preprocess": "^4.9.8",
    "typescript": "^4.4.4",
    "vite": "^2.6.12"
  }
}
